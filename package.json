{
  "name": "@ts-java/monorepo",
  "description": "TypeScript implementations of some select Java classes.",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "check-package": "turbo run check-package",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prettier:run": "prettier --write .",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "typecheck:watch": "turbo run typecheck:watch"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.4.0"
  }
}
